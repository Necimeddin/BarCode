<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoneyExe</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden;
            font-family: 'Segoe UI', sans-serif;
        }

        /* Sidebar */
        .sidebar {
            height: 100vh;
            width: 240px;
            position: fixed;
            top: 0;
            left: 0;
            background: #0d1736;
            color: #fff;
            display: flex;
            flex-direction: column;
            padding-top: 20px;
        }

            .sidebar .brand {
                font-size: 1.5rem;
                font-weight: bold;
                padding: 0 20px;
                margin-bottom: 30px;
                color: #4da3ff;
            }

            .sidebar a {
                color: #bcdcff;
                text-decoration: none;
                padding: 10px 20px;
                display: block;
                transition: 0.2s;
            }

                .sidebar a:hover {
                    background: #1b2b55;
                    color: #fff;
                    text-shadow: 0 0 5px #0d6efd;
                }

            .sidebar .submenu {
                padding-left: 20px;
            }

        /* Main content */
        .content {
            margin-left: 240px;
            height: 100vh;
            overflow: hidden;
        }

    </style>

    @RenderSection("PageBackground", required: false)
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="brand">Menyu</div>

        <a href="#" data-bs-toggle="collapse" data-bs-target="#excelMenu" aria-expanded="false">
            Excel
        </a>
        <div class="collapse submenu" id="excelMenu">
            <a href="@Url.Action("UploadExcel", "Home")">Excel Faylı Yüklə</a>
        </div>

        @* Burada gələcəkdə digər menyular əlavə oluna bilər *@
    </div>

    <!-- Main content -->
    <div class="content">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>